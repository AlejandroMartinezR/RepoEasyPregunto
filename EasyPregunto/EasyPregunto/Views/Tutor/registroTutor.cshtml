@model EasyPregunto.Models.TutorVO

@{
    ViewBag.Title = "registroTutor";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>registroTutor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       
            <div>
                @Html.Label("Tipo Documento"):
                @Html.DropDownListFor(model => model.TipoDocumentoTutorVO, new[]
{
                    new SelectListItem{ Value = "1", Text = "C.C" },
                    new SelectListItem{ Value = "2", Text = "C.E" },
                    new SelectListItem{ Value = "3", Text = "T.I" }
                 },
     "Elegir Opcion"
)
                @Html.ValidationMessageFor(model => model.TipoDocumentoTutorVO, "", new { @class = "text-danger" })
            </div>
 

        <div class="form-group">
            <label>Numero Documento:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroDocumentoTutorVO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroDocumentoTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombresTutorVO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombresTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Apellidos</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApellidosTutorVO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApellidosTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Correo Electronico</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CorreoElectronicoTutorVO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CorreoElectronicoTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Contraseña</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClaveTutorVO, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.ClaveTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Telefonos :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TelefonoTutorVO, new { htmlAttributes = new { @class = "form-control", @Value = "500000-500000000" } })
                @Html.ValidationMessageFor(model => model.TelefonoTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#miModal">
            Agregar Experiencia
        </button>

        <div class="form-group">
            <label>Tiempo de Experiencia</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TiempoLaboradoTutorVO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TiempoLaboradoTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Area de conocimiento</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AreaConocimientoTutorVO, new[]
{
                    new SelectListItem{ Value = "1", Text = "Matematicas"},
                    new SelectListItem{ Value = "2", Text = "Biologia"},
                    new SelectListItem{ Value = "3", Text = "Idiomas"},
                    new SelectListItem{ Value = "4", Text = "Sistemas"},
                 },
     "Elige Materia"
)
                    @Html.ValidationMessageFor(model => model.AreaConocimientoTutorVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Perfil Profesional</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescripcionPerfilVO, new { htmlAttributes = new { @class = "form-control", @Values = "Descripcion Perfil" } })
                @Html.ValidationMessageFor(model => model.DescripcionPerfilVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Realizar Registro" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Agregar Experiencia</h4>
            </div>
            <div class="modal-body">
                Ingrese Experiencia
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Agregar</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<link href="~/Scripts/HojaAlejo.css" rel="stylesheet" />