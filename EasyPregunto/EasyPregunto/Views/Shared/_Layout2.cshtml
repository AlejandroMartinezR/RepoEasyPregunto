
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EasyPregunto</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <header>

            <ul>
                <li>
                    <a href="@Url.Action("Principal", "Home")">
                        <img src="~/Content/Imagenes/logopng.png" alt="Logo" />
                    </a>
                </li>
                <li>@Html.ActionLink("EasyPregunto", "Principal", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Registrarse", "Registrar", "Usuario")</li>
                <li>@Html.ActionLink("Ingresar", "Login", "Usuario")</li>

            </ul>
  


    </header>
    <div>
        @RenderBody()
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>

        <script src="~/Scripts/index.js"></script>

    </div>
    <footer class="abajo">
        <div class="footer">Terminos y condicionesblalabla · Informacion Legal · Contactenos.<a href="@Url.Action("registrotutor", "Tutor")">Trabaje con nosotros</a><p>&copy; @DateTime.Now.Year - EasyPregunto</p></div>
    </footer>
</body>
</html>